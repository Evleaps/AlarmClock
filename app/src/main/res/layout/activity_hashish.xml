<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.evleaps.alarmclock.activity.settings.Hashish">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/viewSelectClock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/plusAlarmClock"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desc_call"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_toStartOf="@+id/ok_desc_call"
                android:gravity="center"
                android:text="Позвонить чуваку который написал это приложение"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/ok_desc_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:background="@null"
                app:srcCompat="@mipmap/icon_alarm_clock"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/desc_open_internet"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text='Загуглить: "Как завести будильник на \n android"'
                android:textSize="15dp"
                android:layout_below="@+id/desc_call"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/ok_desc_open_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:srcCompat="@mipmap/icon_alarm_clock"
                android:layout_below="@+id/desc_call"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/desc_registration"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text='Ввести данные пользователя \n для сохранения в БД'
                android:textSize="15dp"
                android:layout_below="@+id/desc_open_internet"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/ok_desc_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:srcCompat="@mipmap/icon_alarm_clock"
                android:layout_below="@+id/desc_open_internet"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/desc_personal_account"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text='Посмотреть пользователя'
                android:textSize="15dp"
                android:layout_below="@+id/desc_registration"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/ok_desc_personal_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:srcCompat="@mipmap/icon_alarm_clock"
                android:layout_below="@+id/desc_registration"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>